<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_license"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:layout_width="300sp"
        android:layout_height="40sp"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:layout_marginTop="30sp"
        android:layout_marginBottom="15sp"
        android:text="운전면허를 등록해주세요"
        android:textStyle="bold"
        android:textColor="@android:color/black"
        android:textSize="18sp" />

    <TextView
        android:layout_width="300sp"
        android:layout_height="60sp"
        android:layout_weight="1"
        android:layout_gravity="center"
        android:text="안전한 서비스 이용을 위해 본인인증 및\n운전면허 등록이 필요합니다.\n등록하지 않으면 이용에 제약이 있습니다."
        android:textSize="12dp"

        android:textColor="@android:color/black"
        />

    <fragment
        android:name="com.calmdawnstudio.rentbung.FragLicenseFirst"
        android:id="@+id/fragment_license"

        android:layout_width="300sp"
        android:layout_height="300sp"
        android:layout_gravity="center"
        android:layout_weight="5"
        android:layout_marginBottom="20sp"
        />

    <TextView
        android:layout_width="300sp"
        android:layout_height="80sp"
        android:layout_weight="1"
        android:layout_gravity="center"
        android:layout_marginBottom="15sp"
        android:text="도로교통법상 전동킥보드는 운전면허\n(원동기장치자전거 면허 포함)취득자만 이용 가능합니다.\n무면허상태로 전동킥보드를 이용함으로써\n 발생하는 모든 문제에 대한 책임은 본인에게 있습니다."
        android:textSize="12sp"
        android:gravity="center"
        android:background="@color/warning"
        android:textColor="@android:color/holo_red_dark" />

    <Button
        android:id="@+id/button_signUp"
        android:layout_width="300sp"
        android:layout_height="40sp"
        android:layout_gravity="center"
        android:layout_marginBottom="10sp"
        android:layout_weight="1"
        android:background="@android:color/holo_orange_dark"
        android:text="등록하기"
        android:textSize="16sp"
        android:textColor="@android:color/white"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/text_signLater"
        android:layout_width="300sp"
        android:layout_height="30sp"
        android:layout_gravity="center"
        android:layout_marginBottom="20sp"
        android:layout_weight="1"
        android:text="@string/underline"
        android:textSize="10sp"
        android:gravity="center"/>



</LinearLayout>